<% if logged_in? %>
    <% @routes.each do |route| %>
        <%= route.departing %>
        <%= route.destination %>
            <%= form_tag('/train_routes', method: :post) do %>
                <%= hidden_field_tag :route_id, route.id %>
                <%= submit_tag 'book a train' %>
            <% end %>
    <% end %>  
<% end %>

<% if current_user && current_user.admin? %>
 <%= link_to "create a new train", new_train_path %>
<% end %>
