<h1> <%= @user.name %> </h1>

<% if @user.train_routes.empty? %>
    <p>you currently do not have a train route</p>
<% else %>
    <p> these are trains you have leased </p>
    <% @user.train_routes.each do |route| %>
        
        <p>train model: <%= route.train.model %></p>
        <p>train id number: <%= route.train.ident_number %></p>
        <p>departing: <%= route.departing %></p>
        <p>destination: <%= route.destination%></p>
        <br>
    <% end %>
<% end %>