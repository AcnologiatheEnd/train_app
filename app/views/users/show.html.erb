<style>

    div.aRoute {
        background-color: #eeeeee;
        height: 300px;
        width: 370px;
        padding: 80px;
        border-radius: 10px;
    }

    li {
        font-size: 1.05em;
        list-style: none;
        padding-right: 10px;
    }
</style>

<h1> 
    <%= @user.name %> 
    <%= @user.email %>
    <% if current_user != nil && current_user.admin? %>
        <strong> Admin </strong>
    <% end %>
</h1>

<% if @user.train_routes.empty? %>
    <p>you currently do not have a train route. visit the home page to see available trains</p>
<% else %>
    <p> these are trains you have leased </p>
    <% @user.train_routes.each do |route| %>
        <div class = "aRoute">
        <li><strong>train model:</strong> <%= route.train.model %></li>
        <li><strong>train id number:</strong> <%= route.train.ident_number %></li>
        <button><%= link_to "see routes", user_train_routes_path %></button>
        <button><%= link_to "delete train", delete_train_path %></button>
        <button><%= link_to "add new route", new_user_train_route_path %></button>
        </div>
        <br>
    <% end %>
<% end %>

<p><%= link_to "edit user", edit_user_path %></p>